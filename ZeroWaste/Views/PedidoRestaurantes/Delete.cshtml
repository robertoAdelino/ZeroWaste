@model ZeroWaste.Models.PedidoRestaurante

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PedidoRestaurante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EstadoEntrega)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EstadoEntrega)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Familias)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Familias.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Instituicoes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Instituicoes.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefeicoesRestaurante)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefeicoesRestaurante.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Voluntarios)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Voluntarios.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDPedidoRestaurante" />
        <a href="#myModal" class="trigger-btn" data-toggle="modal">
            <input type="submit" value="ELIMINAR" class="btn btn-danger" />
        </a>
        <a asp-action="Index" class="btn btn-default">Voltar à lista de Famílias</a>
    </form>
    <!-- CONFIRMAÇÃO DO ELIMINAR -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Tem a certeza que quer eliminar o pedido <b>@Html.DisplayFor(model => model.Nome)</b>?</h2>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IDPedidoRestaurante" />
                        <input type="submit" class="btn btn-danger" value="ELIMINAR" />
                        <button type="button" class="btn btn-info" data-dismiss="modal">CANCELAR</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
